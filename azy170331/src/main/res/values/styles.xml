<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="tv_main">
        <!--android:background="@drawable/selector_changebackground"-->
        <!--android:clickable="true"-->
        <item name="android:background">@drawable/selector_changebackground</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">38dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="setting_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="setting_togglebutton">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/seletor_setting_start</item>
        <item name="android:clickable">true</item>
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
    </style>

    <style name="setting_togglebutton_2">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@mipmap/ic_arrows_right</item>
        <item name="android:clickable">true</item>
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
    </style>
    <style name="StyleProgressBarMini" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">50dip</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/shape_progressbar_mini</item>
    </style>
    <!--  饼形图 -->
    <style name="soft_piechar">
        <item
            name="android:layout_width">@dimen/softmgr_piechar_width</item>
        <item
            name="android:layout_height">@dimen/softmgr_piechar_height</item>
    </style>
    <!--  饼形图 icon -->
    <style name="soft_piechar_icon">
        <item
            name="android:layout_width">@dimen/softmgr_piechar_icon_width</item>
        <item
            name="android:layout_height">@dimen/softmgr_piechar_icon_width</item
            >
    </style>


</resources>
