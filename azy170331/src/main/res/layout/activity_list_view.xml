<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_test"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="10dp"
    tools:context="com.Syuan.azy170331.activitis.test.TestActivity">

    <RelativeLayout
        android:id="@+id/rl_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <CheckBox
            android:id="@+id/checkbox_soft"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/iv_img"
            android:layout_toRightOf="@id/checkbox_soft"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/btn_homeasup_default"/>



        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="版本号" />
        <TextView
            android:id="@+id/tv_app_name"
            android:layout_toRightOf="@id/iv_img"
            android:layout_toLeftOf="@id/tv_version"
            android:lines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textSize="16sp"
            android:text="应用名" />
        <TextView
            android:id="@+id/tv_date"
            android:layout_below="@id/tv_version"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />

        <TextView

            android:id="@+id/tv_package_name"
            android:layout_toLeftOf="@id/tv_date"
            android:layout_below="@id/tv_app_name"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/iv_img"
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:text="包名" />
    </RelativeLayout>





</RelativeLayout>
