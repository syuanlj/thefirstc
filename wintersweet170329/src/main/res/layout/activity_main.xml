<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.Syuan.wintersweet170329.MainActivity">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="南京人即将放假8天！4月最不能错过的旅行地，挑一个出发吧！"
        android:textColor="#000"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv1"
        android:gravity="center"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="南京周末游" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv2"
            android:background="#888"
            android:text="南京"
            android:textColor="#fff" />

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/littlepic" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@id/iv1"
            android:text="1小时前" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@id/tv3"
            android:text="评论11" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl1"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/pic1" />

        <View
            android:layout_width="10dp"
            android:layout_height="0dp"/>
        <ImageView
            android:id="@+id/iv3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/pic2" />
        <View
            android:layout_width="10dp"
            android:layout_height="0dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@mipmap/pic3" />


    </LinearLayout>
<RelativeLayout
    android:layout_below="@id/ll1"
    android:layout_width="match_parent"
    android:layout_height="2600dp">
   <TextView
       android:id="@+id/v0"
       android:layout_width="20dp"
       android:layout_height="20dp"
       android:layout_centerInParent="true"
       android:background="#f00"/>
    <TextView
        android:id="@+id/tv5"
        android:layout_below="@id/v0"
        android:layout_width="20dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@id/v0"
        android:background="#f00"/>
    <TextView
        android:id="@+id/tv4"
        android:layout_above="@id/v0"
        android:layout_width="20dp"
        android:layout_height="100dp"
        android:background="#f00"
        android:layout_alignLeft="@id/v0"/>
    <TextView
        android:layout_toLeftOf="@id/v0"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:background="#f00"
        android:layout_alignBottom="@id/v0"/>
    <TextView
        android:layout_toRightOf="@id/v0"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@id/v0"
        android:background="#f00"/>
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_above="@id/tv4"
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:background="#f00"/>
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv5"
        android:layout_width="280dp"
        android:layout_height="20dp"
        android:background="#f00"/>


</RelativeLayout>

</RelativeLayout>
